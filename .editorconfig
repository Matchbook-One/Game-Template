[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 140
tab_width = 2
trim_trailing_whitespace = true
ij_continuation_indent_size = 4
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false
ij_any_method_call_chain_wrap = on_every_item
ij_any_array_initializer_new_line_after_left_brace = true
ij_any_array_initializer_right_brace_on_new_line = true
ij_any_array_initializer_wrap = on_every_item
ij_any_align_multiline_array_initializer_expression = true
ij_any_block_comment_add_space = true
ij_any_line_comment_add_space = true
ij_any_space_after_comma = true

[*.json]
ij_json_keep_trailing_comma = false
ij_json_space_after_comma = true

[*.php]
ij_php_align_multiline_chained_methods = true
ij_php_force_short_declaration_array_style = true
ij_php_line_comment_add_space = true
ij_php_spaces_around_pipe_in_union_type = true
ij_php_blank_lines_after_opening_tag = 0
ij_php_comma_after_last_argument = false
ij_php_comma_after_last_array_element = false
ij_php_comma_after_last_closure_use_var = false
ij_php_comma_after_last_match_arm = false
ij_php_comma_after_last_parameter = false
ij_php_continuation_indent_size = 2
ij_php_indent_size = 2

[*.js]
ij_javascript_enforce_trailing_comma = remove
ij_javascript_spaces_within_object_literal_braces = true
ij_javascript_spaces_within_imports = true

[*.yaml]
ij_yaml_align_values_properties = on_value
ij_yaml_indent_size = 2
ij_yaml_autoinsert_sequence_marker = true